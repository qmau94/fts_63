<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:title), root_url, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t("home.title"), root_url %>
        </li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
              aria-haspopup="true" aria-expanded="false">
              <%= t :signed_in %> <%= current_user.username %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("home.edit"), edit_user_registration_path %>
              </li>
              <li>
                <%= link_to t(:log_out), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t(:log_in), new_user_session_path %>
          </li>
          <li>
            <%= link_to t("home.log_in_with_fb"),
              user_facebook_omniauth_authorize_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
